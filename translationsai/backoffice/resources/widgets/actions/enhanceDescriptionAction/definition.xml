<?xml version="1.0" encoding="UTF-8"?>
<!--
  Action definition for AI Translate Description in translationsai extension
  Ensures action-id in backoffice config maps to this definition id.
-->
<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="com.translations.backoffice.actions.translateDescriptionAction"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
    <name>AI Translate Description</name>
    <description>Improve the current product description using AI.</description>
    <author>translationsai</author>
    <version>1.0</version>

    <iconUri>icons/translate_description.png</iconUri>

    <!-- Java class implementing com.hybris.cockpitng.actions.CockpitAction -->
    <actionClassName>com.translations.backoffice.actions.TranslateDescriptionAction</actionClassName>
</action-definition>
