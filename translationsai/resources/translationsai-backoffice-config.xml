<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:y="http://www.hybris.com/cockpit/config/hybris">

    <!-- AI Translate Description Action for Product (Editor Area toolbar) -->
    <context type="Product" component="editorareaactions">
        <y:actions>
            <y:group qualifier="common" position="40">
                <!-- Place after Sync action (typically at position 30) -->
                <y:action action-id="com.translations.backoffice.actions.translateDescriptionAction" property="currentObject" position="40"/>
            </y:group>
        </y:actions>
    </context>

</config>
